{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-order": [
      "array",
      "of",
      "unprefixed",
      "property",
      "names",
      "or",
      "group",
      "objects"
    ]
  }
}
